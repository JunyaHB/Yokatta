<!-- Page Header -->
<header class="masthead" style="background-image: url('img/topimage4.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">        
          <h2>ログイン</h2>
          <span class="subheading"></span>
        </div>
      </div>
    </div>
  </div>
</header>


<!-- Main Content -->
<div class="container">
　<%= form_with(scope: :session, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email, class: 'form-control', id: 'session_email' %>
    </div>
    <div class="form-group">
      <%= f.label :パスワード %>
      <%= f.text_field :password, class: 'form-control', id: 'session_password' %>
    </div>
    <%= f.submit "ログインする", class: "btn btn-primary" %>
  <% end %>
</div>
