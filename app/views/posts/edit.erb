<!-- Page Header -->
<header class="masthead" style="background-image: url('/editimage.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">        
          <h2>投稿内容の修正</h2>
          <span class="subheading"></span>
        </div>
      </div>
    </div>
  </div>
</header>


<!-- Main Content -->
<div class="container">
  <%= form_with model: @post, local: true do |f| %>
    <div class="form-group">
      <%= f.label :"成功体験/失敗体験" %></br>
      <%= f.select :category, [["成功体験", "true"], ["失敗体験", "false"]] ,class: "form-control" %></br>
    </div>
    <div class="form-group">
      <%= f.label :投稿内容 %>
      <%= f.text_area :content, rows: 5, class: 'form-control', id: 'post_description' %>
    </div>
      <%= f.submit "更新する", class: "btn btn-primary" %>
    
  <% end %>
</div>
